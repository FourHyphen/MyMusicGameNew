<Window x:Class="MyMusicGameNew.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyMusicGameNew"
        mc:Ignorable="d"
        PreviewKeyDown="MainWindowKeyDown"
        Title="MainWindow" Height="600" Width="1000">
    <Grid>
        <local:GridMusicSelect x:Name="MusicSelect"
                            Visibility="Visible"/>
        <local:GridPlayArea x:Name="PlayArea"
                            Visibility="Hidden"/>

        <!--Debug Info-->
        <Label x:Name="GameStatus"
               HorizontalAlignment="Center"
               Visibility="Hidden"/>
        <Label Content="Notes: "
               Visibility="Hidden"/>
        <Label Content="Next: "
               Visibility="Hidden"/>
        <Label x:Name="NotesNum"
               Content="---"
               Visibility="Hidden"/>
        <Label x:Name="PlayingMusicStatus"
               Visibility="Hidden"/>
    </Grid>
</Window>
